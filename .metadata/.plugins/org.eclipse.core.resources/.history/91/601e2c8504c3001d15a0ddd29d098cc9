package com.maurya.dao;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.InputStreamReader;

public class ProductAndUserDetailsStorage
{
      public static void main(String[] args)
      {
		
    	  String productfilename = "C:\\E-commerce Product\\ecommerceproductmarketing\\src\\com\\maurya\\dao\\productdetails.txt";
    	  String userdetails ="C:\\E-commerce Product\\ecommerceproductmarketing\\src\\com\\maurya\\dao\\userdetails.txt";
    	  
    	  
    	  try 
    	  {
    		  
    		  FileOutputStream productFos = new FileOutputStream(productfilename); 
              FileOutputStream userFos = new FileOutputStream(userdetails); 
              
              FileInputStream productFis = new FileInputStream(productfilename); 
              FileInputStream userFis = new FileInputStream(userdetails);
    		  
              
              System.out.println("Enter product Name:");
              System.out.println();
              BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
              String productDetails = br.readLine();
              productFos.write(productDetails.getBytes());
              
              
              System.out.println("Enter user Name:");
              System.out.println();
              System.out.println("Enter user id ");
              String userDetails = br.readLine();
              userFos.write(userDetails.getBytes());
              
              
              
              System.out.println("Product data read from file:");
              int ch;
              while ((ch = productFis.read()) != -1) 
              {
                  System.out.print((char)ch);
              }
              System.out.println();
              System.out.println("User data read from file:");
              while ((ch = userFis.read()) != -1) 
              {
                  System.out.print((char)ch);
              }
              
              productFos.close();
              userFos.close();
              productFis.close();
              userFis.close();


              
    		  
    	  }
    	  
    	  
         catch(Exception e)
    	  {
    		  
    		  
    		  e.printStackTrace();
    		  
    		  
    	  }
    	  
    	  
    	  
    	  
    	  
    	  
    	  
    	  
    	  
    	  
    	  
    	  
    	  
    	  
    	  
	  }
}
